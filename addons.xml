<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.aftermath" name="Aftermath Wizard" version="0.0.1" provider-name="Aftermath">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Aftermath Wizard</summary>
    <description lang="en">Aftermath Wizard allows you to get access to the latest Aftermath Custom Builds: Aftermath Zephyr, Aftermath Simple, Aftermath Simple Lite.

	Credits to all Addon Developers.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.aftermath" name="Aftermath Repo" version="0.0.1" provider-name="Aftermath">
	<extension point="xbmc.addon.repository" name="Aftermath Repo">
		<info compressed="false">https://github.com/surfacingx/Aftermath/master/addons.xml</info>
		<checksum>https://github.com/surfacingx/Aftermath/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/surfacingx/Aftermath/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Aftermath Repository</summary>
		<description>Home of the Aftermath wizard</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
