<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.apollocosmic" name="ApolloCosmic Wizard" version="1.2" provider-name="ApolloCosmic">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">	ApolloCosmic Wizard</summary>
    <description lang="en">Easy Update Your Kodi Install, from a number of Kodi Builders</description>
    <platform>all</platform> 
  </extension>
</addon>
